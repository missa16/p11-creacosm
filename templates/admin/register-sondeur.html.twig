{% extends 'base.html.twig' %}

{% block title %}Ajouter un sondeur{% endblock %}

{% block body %}
    <h1>Ajouter un sondeur</h1>

    <button class="btn btn-outline-info">
        <a  href="{{ path('app_admin_show_sondeurs') }}" class="text-decoration-none">
            <i class="bi bi-arrow-return-left"></i>Retour </a>
    </button>

    {{ form_start(registrationForm) }}
    {{ form_row(registrationForm.nom) }}
    {{ form_row(registrationForm.prenom) }}

    {{ form_row(registrationForm.email) }}

    {{ form_row(registrationForm.plainPassword, {label: 'Password'}) }}


    {{ form_row(registrationForm.genre) }}
    {{ form_row(registrationForm.dateNaissance) }}

    {{ form_row(registrationForm.formation) }}
    {{ form_row(registrationForm.ville)}}


    <button type="submit" class="btn btn-success">Valider</button>
    {{ form_end(registrationForm) }}
{% endblock %}
