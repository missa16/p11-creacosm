{% extends 'base.html.twig' %}

{% block title %}Sondage index{% endblock %}

{% block body %}
    <div class="grid-container-nav">
        {{ include('composants/_nav_bar.html.twig') }}
        <div class="content-sond">
            <div class="row">
                <div class="df jce">
                    <div class="">
                        <button class="button"><a class="text-decoration-none a" href="{{ path('app_logout') }}">se
                                deconnecter</a></button>
                    </div>
                </div>
            </div>
            <div class="row">
                <h1 class="df jcc">Bienvenue chez creacosm</h1>
            </div>
            <div class="row">
                <div class="grid-container-8">
                    {% for sondage in sondages %}
                        <div class="card-sondage">
                            <div class="img-container-2">
                                <img src="{{ asset('build/images/produit_bio.jpg') }}" alt="image"/>
                            </div>

                            <div><h2>{{ sondage.intitule }}</h2></div>
                            <div><p>  {{ sondage.description }}</p></div>
                            <div class="d-flex"><p>Lancement :</p>
                                <p>{{ sondage.dateLancement ? sondage.dateLancement|date('d/m/Y') : '' }}</p></div>
                            <div class="d-flex"><p>Fin :</p>
                                <p>{{ sondage.dateFin ? sondage.dateFin|date('d/m/Y') : '' }}</p></div>
                            <div>
                                    <button class="button-t"><a class="c-black"
                                                                href="{{ path('app_admin_show', {'id': sondage.id}) }}">Modifier</a>
                                    </button>
                                    <button class="button-t"><a class="c-black"
                                                                href="{{ path('app_admin_stats_survey', {'id': sondage.id}) }}">Statistiques</a>
                                    </button>
                                </div>
                        </div>
                    {% endfor %}
                </div>


            </div>
        </div>
    </div>

{% endblock %}






